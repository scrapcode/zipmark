<% if params[:remote] %>
<div align="center">
<% end %>
<%= form_for(@mark) do |f| %>
  <% if @mark.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@mark.errors.count, "error") %> occurred.</h2>
      <ul> 
        <% @mark.errors.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <%= hidden_field :remote, :value => 'true' if params[:remote] %>

  <div class="field">
    <%= f.label :title %>
    <%= f.text_field :title, :value => ("#{params[:title]}" or '') %>
  </div>
  <div class="field">
    <%= f.label :url %>
    <%= f.text_field :url, :value => ("#{params[:url]}" or '') %>
  </div>

  <div class="field">
    <%= f.label :tag_list, 'Tags' %> <small>(comma seperated)</small><br />
    <%= f.text_field :tag_list, :value => @mark.tag_list, :autofocus => true %>
  </div>

  <div class="actions">
    <%= f.submit "Add Zipmark", :class => 'btn btn-primary btn-large' %>
  </div>

<% end %>
<% if params[:remote] %>
</div>
<% end %>